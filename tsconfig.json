{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "paths": {
      "@sb": [
        "./src/stories/index"
      ],
      "@test": [
        "./utils/test-utils.tsx"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "target": "ES6",
    "types": [
      "jest"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "src/stories",
    "doc"
  ]
}
